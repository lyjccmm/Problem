    "version": "2.0.0",
    "tasks": [
        {
            "label": "🍎Creat Template",
            "type": "shell",
            "command": "start create_problem_template.bat",
        },
        {
            "label": "编译c++文件",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-O2",
                "-std=c++14",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "${file}",
            ],
        },
        {
            "label": "查看所有标签和难度",
            "type": "shell",
            "command": "python 查看所有标签和难度.py",
        },
    ]
}